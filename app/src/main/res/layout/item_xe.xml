<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/img_hinh"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginRight="10dp" />
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/txt_hang"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Hãng: Honda"
        android:textColor="#2962FF"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txt_ten"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tên: Vision"
        android:textColor="@color/maudo"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txt_mau"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Màu: Đỏ"
        android:textColor="@color/common_google_signin_btn_text_light_focused"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txt_nam_sx"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Năm sản xuất: 2016"
        android:textColor="@color/common_google_signin_btn_text_light_focused"
        android:textSize="18sp"
        android:textStyle="bold" />
</LinearLayout>
</LinearLayout>