<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical">


        <TextView
            android:id="@+id/txt_id"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:gravity="center"
            android:text="01"
            android:background="@drawable/bg_tron"
            android:textAlignment="center"
            android:textColor="@color/mautrang"
            android:textSize="36sp"
            android:textStyle="bold"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"/>


<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical">

    <TextView
        android:id="@+id/txt_ngay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ngày: 01/01/2019"
        android:textColor="@color/maudo"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txt_noi_dung"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nội dung: Thay nhớt"
        android:textColor="@color/mauxanh"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txt_gia"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tổng chi phí: 110.000đ"
        android:textColor="@color/maucam"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txt_noi_bao_duong"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nơi bảo dưỡng: Hồng Đức 7"
        android:textColor="@color/mauxanhla"
        android:textSize="18sp"
        android:textStyle="bold" />

</LinearLayout>
</LinearLayout>